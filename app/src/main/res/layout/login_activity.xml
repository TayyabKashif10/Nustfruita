<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.LoginActivity">

    <TextView
        android:id="@+id/signInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginButtonText"
        android:textColor="#EA6E47"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:textSize="70sp"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginEmailCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInTitle"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/md_theme_light_primary"
        app:cardCornerRadius="40dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/loginEmailIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/email_icon_description"
                android:src = "@drawable/email_icon"
                app:tint="#EA6E47"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/loginUserEmail"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_toEndOf="@id/loginEmailIcon"
                android:backgroundTint="@color/transparent"
                android:layout_marginStart="5dp"
                android:hint="@string/email"
                android:autofillHints="emailAddress"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginPasswordCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEmailCard"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/md_theme_light_primary"
        app:cardCornerRadius="40dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/loginPasswordIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/password_icon_description"
                android:src = "@drawable/password_icon"
                app:tint="#EA6E47"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/loginUserPassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_toEndOf="@id/loginPasswordIcon"
                android:backgroundTint="@color/transparent"
                android:layout_marginStart="5dp"
                android:hint="@string/password"
                android:autofillHints="password"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/login"
        style="@style/AuthButtonStyle"
        android:text="@string/loginButtonText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPasswordCard" />
</androidx.constraintlayout.widget.ConstraintLayout>