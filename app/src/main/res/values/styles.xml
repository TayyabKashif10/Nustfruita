<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/background_color</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>

    <style name="AuthButtonStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/transparent</item>
    </style>

    <style name="round_corner_square">
        <item name="android:topLeftRadius">16dp</item>
        <item name="android:topRightRadius">16dp</item>
        <item name="android:bottomLeftRadius">16dp</item>
        <item name="android:bottomRightRadius">16dp</item>
    </style>



    <style name="BottomSheetAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>
</resources>