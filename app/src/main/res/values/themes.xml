<resources>

    <style name="Theme.AppTheme" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="colorOnBackground">@color/onBackground</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowSplashScreenBackground">@color/background_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>

</resources>
